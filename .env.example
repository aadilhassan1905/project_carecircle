# Neon Postgres Database Connection for Netlify
PGHOST=ep-xxxxx.us-east-2.aws.neon.tech
PGDATABASE=your_database_name
PGUSER=your_database_user
PGPASSWORD=your_database_password
PGPORT=5432
DATABASE_URL=postgresql://your_database_user:your_database_password@ep-xxxxx.us-east-2.aws.neon.tech:5432/your_database_name

# Email (SMTP) settings for reminders
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
REMINDER_FROM=your_email@example.com
